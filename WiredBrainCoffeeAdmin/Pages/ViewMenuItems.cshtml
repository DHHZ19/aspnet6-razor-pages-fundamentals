@page
@model WiredBrainCoffeeAdmin.Pages.ViewMenuItemsModel
<h1 class="h2">All Menu Items <a asp-page="AddMenuItem" class="btn-success btn float-end">Add New</a></h1>
<hr />
<table class="menu-items table table-striped table-bordered  table-hover">
    <thead>
        <tr>
            <th>ID #</th>
            <th>Image</th>
            <th>Category</th>
            <th>Name</th>
            <th>Short Description</th>
            <th>Price</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.MenuItems)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="~/images/menu/@item.ImgFileName" /></td>
                <td>@item.Category</td>
                <td>@item.Name</td>
                <td>@item.ShortDescription.</td>
                <td>@item.Price</td>
                <td><a class="btn btn-secondary" asp-page="AddMenuItem" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>